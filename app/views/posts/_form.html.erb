<h1> Upload Post </h1>
<div class="min-height--600">
<%= form_for(@post) do |f| %>


  <div class="image padding">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field padding">
    <%= f.label :caption %><br>
    <%= f.text_field :caption %>
  </div>
   
   <div class="actions padding">
    <%= f.submit 'upload', class: "btn color-red white" %>
  </div>
<% end %>
</div>